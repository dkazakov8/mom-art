{
  "include": [
    "src/stores",
    "_types"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "react",
    "noEmit": false,
    "target": "es6",
    "module": "esnext",
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "declarationDir": "separated-types",
    "declarationMap": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "*",
        "src/*",
        "_types/*"
      ]
    }
  }
}
